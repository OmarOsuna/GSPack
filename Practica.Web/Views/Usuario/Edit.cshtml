
@{
    ViewBag.Title = "Edit";
}

<div class="modal-body" id="mdContent">

    <input type="hidden" id="usuario-id" value="@ViewBag.IdUsuario">
    <div class="box-header with-border">
        <h3 class="box-title">Editar Usuario</h3>
    </div>

    <div class="input-group margin">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input type="text" class="form-control" placeholder="Nombre" id="nombre">
    </div>

    <div class="input-group margin">
        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        <input type="text" class="form-control" placeholder="Correo" id="correo">
    </div>

    <div class="input-group margin">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input type="text" class="form-control" placeholder="Cuenta" id="cuenta">
    </div>

    <div class="form-group margin">
        <select class="form-control select2" style="width: 100%;" id="perfil">
            <option value="1" selected="selected">Administrador</option>
            <option value="2">Lectura</option>
        </select>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="editar()">Editar</button>
    </div>

</div>

