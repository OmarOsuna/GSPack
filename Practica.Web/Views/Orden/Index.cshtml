<script src="~/Scripts/orden.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyEFT_ub90hs6dmixpdlYHd3LUFrU9JT0&callback=initMap"></script>
<script src="~/Scripts/locationpicker.jquery.js"></script>

<div class="content-wrapper">


    <section class="content-header">

        <h1>
            Gestión de Ordenes
        </h1>

    </section>

    <section class="content">
        <a onclick="add()" class="btn bg-blue"><i class="fa fa-plus-square"></i> Agregar</a>
        <a onclick="eliminar()" class="btn bg-maroon"><i class="fa fa-trash"></i> Eliminar</a>
        <a onclick="edit()" class="btn bg-green"><i class="fa fa-pencil"></i> Editar</a>
        <a onclick="viewStatus()" class="btn bg-orange"><i class="fa fa-check-circle"></i> Historial de Transporte</a>

        <div class="row">
            <br />
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tabla-ordenes" class="table table-bordered table-striped datatable-selection-single">
                            <thead>
                                <tr>
                                    <th id="ide" hidden>Id</th>
                                    <th>Rastreo</th>
                                    <th>Fecha y Hora</th>
                                    <th>Fecha Entrega</th>
                                    <th>Remitente</th>
                                    <th>Destinario</th>
                                    <th>Domicilio</th>
                                    <th>Precio</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



<div class="modal fade" id="mdMain">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Orden de Envio</h4>
            </div>
            <div id="mdContent">

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="mdMainStatus">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Historial de Transporte</h4>
            </div>
            <div class="col-md-16">
                <div class="row margin margin-bottom-none">
                    <a onclick="viewStatus()" class="btn bg-red"><i class="fa fa-eye"></i></a>
                    <a onclick="addStatus()" class="btn bg-blue"><i class="fa fa-plus-square"></i></a>
                    <a onclick="eliminarStatus()" class="btn bg-maroon"><i class="fa fa-trash"></i></a>
                    <a onclick="editStatus()" class="btn bg-green"><i class="fa fa-pencil"></i></a>
                    <a onclick="viewMap()" class="btn bg-orange"><i class="fa fa-map"></i></a>
                </div>
            </div>
            <div id="mdContentStatus">

            </div>
        </div>
    </div>
</div>