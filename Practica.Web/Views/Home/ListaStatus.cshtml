
@{
    ViewBag.Title = "ListaStatus";
}

<div class="modal-body" id="mdContent">
    <div class="content">

        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">Lista de Estatus</h3>
            </div>


            <div class="row invoice-info margin">

                <div class="col-sm-4">
                    <address>
                        <strong style="font-size: 15px; color:#ca9c00;">Enviado Por</strong>
                        <br>
                        <b style="font-size:18px;" id="nombreRemitente"></b>
                    </address>
                </div>

                <div class="col-sm-4">
                    <address>
                        <strong class="text-center" style="font-size: 15px; color:#ca9c00; text-align:center">Correo Electronico</strong>
                        <br>
                        <b style="font-size:18px;" id="correoRemitente"> </b>
                    </address>
                </div>


                <div class="col-sm-4">
                    <address>
                        <strong style="font-size: 15px; color:#ca9c00;">Telefono</strong>
                        <br>
                        <b style="font-size:18px;" id="numeroRemitente"></b>
                    </address>
                </div>


                <div class="col-sm-4">
                    <address>
                        <strong style="font-size: 15px; color:#ca9c00;">Fecha de Salida</strong>
                        <br>
                        <b style="font-size:18px;" id="fechaSalida"></b>
                    </address>
                </div>

                <div class="col-sm-4">
                    <address>
                        <strong class="text-center" style="font-size: 15px; color:#ca9c00; text-align:center">Fecha de Entrega</strong>
                        <br>
                        <b style="font-size:18px;" id="fechaEntrega"></b>
                    </address>
                </div>


                <div class="col-sm-4">
                    <address>
                        <strong style="font-size: 15px; color:#ca9c00;">Costo Estimado</strong>
                        <br>
                        <b style="font-size:18px;">$</b><b style="font-size:18px;" id="costo"></b>
                    </address>
                </div>
            </div>

            <div id="map_canvas" class="mapping" style="width:100%; height:400px; background: black;">


            </div>

            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-body">
                                <table id="tabla-estatus" class="table table-bordered table-striped datatable-selection-single">
                                    <thead>
                                        <tr>
                                            <th id="ide" hidden>Id</th>
                                            <th>Estatus</th>
                                            <th>Descripción</th>
                                            <th>Fecha y Hora</th>
                                            <th>Lugar</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>




        </div>
    </div>
</div>
